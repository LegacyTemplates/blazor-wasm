<section>
    <h2 style="margin-top:4rem;text-align:center;font-weight:700;font-size:3rem">
        Getting Started
    </h2>
    <div>
        <div>
            <div class="d-flex flex-column mx-auto" style="width:380px">

                <h4 class="my-4 text-center fs-5">Create New Project</h4>
                <input type="text" @bind="project" @bind:event="oninput" autocomplete="off" spellcheck="false"
                       class="form-control form-control-lg mb-4" />

                <ShellCommand class="mb-2">dotnet tool install -g x</ShellCommand>
                <ShellCommand class="mb-2">x new blazor-wasm @project</ShellCommand>

                <blockquote class="blockquote text-center mt-4">
                    Open with <a href="https://visualstudio.microsoft.com/vs/">Visual Studio 2022</a>
                </blockquote>
            </div>
        </div>
    </div>
</section>

@code {
    string project { get; set; } = "ProjectName";
}
